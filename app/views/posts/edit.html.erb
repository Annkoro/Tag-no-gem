<div class="row mt-5">
  <div class="col-6 offset-3">
    <h2 class="text-center mb-4"><i class="fas fa-user-edit"></i>投稿内容編集</h2>
    <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>

      <div class="form-group">
        <label for="title">タイトル</label>
        <%= f.text_field :title, autofocus: true, placeholder: "30文字以内で記入してください", class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="caption">投稿内容</label>
        <%= f.text_area :body, placeholder: "400文字以内で記入してください", class: "form-control" %>
      </div>

    <%= f.submit '変更を保存する', class: "btn btn-lg btn-primary btn-block mb-3" %>
  <% end %>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 mt-5">
    <h2><i class="fas fa-handshake"></i>投稿一覧ページ</h2>
    <% @posts.each do |post| %>
      <div>
        <%= post.user.name %><br>
        <%= link_to post_path(post.id) do %>
          <%= post.title %>
        <% end %>
        <p>投稿日：<%= post.created_at.strftime('%Y/%m/%d %H:%M') %></p>
      </div>
    <% end %>
    </div>
  </div>
</div>